<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DynamicStyling.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.DynamicStyling.Light" parent="Theme.DynamicStyling.Base">
        <item name="coffee_icon">@drawable/ic_coffee_day</item>
        <item name="primaryTextColor">@color/teal_200</item>
    </style>

    <style name="Theme.DynamicStyling.Dark" parent="Theme.DynamicStyling.Base">
        <item name="coffee_icon">@drawable/ic_coffee_night</item>
        <item name="primaryTextColor">@color/white</item>
    </style>

    <style name="CustomTextView">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>
</resources>
